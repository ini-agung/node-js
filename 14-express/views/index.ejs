<table class="table table-hover mt-5">

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Email</th>
            <th scope="col">Handphone</th>
            <th scope="col">Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% let i= 1;  %>
            <% if (mahasiswa.length>0) { %>
                <%mahasiswa.forEach(mhs => { %>
                    <tr>
                        <th scope="row">
                            <%= i++; %>
                        </th>
                        <td>
                            <%= mhs.nama %>
                        </td>
                        <td>
                            <%= mhs.email %>
                        </td>
                        <td>
                            <%= mhs.phone %>
                        </td>
                        <td>
                            <span class="badge rounded-pill bg-primary bg-gradient"><i class="bi bi-pencil-fill"></i></span>
                            <span class="badge rounded-pill bg-warning bg-gradient"><i class="bi bi-info"></i></span>
                        </td>
                    </tr>
                    <% }); %>
                        <% }else{ %>
                            <tr>
                                <td colspan="3">
                                    <div class="btn btn-danger ">Data Tidak Ditemukan</div>
                                </td>
                            </tr>
                            <%}%>
    </tbody>
</table>